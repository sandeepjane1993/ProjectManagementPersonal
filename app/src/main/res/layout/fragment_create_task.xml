<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <TextView
        android:paddingTop="16dp"
        android:background="#df7b8a"
        android:text="Enter you Task details  below"
        android:textColor="#0f0f0f"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/tv_Pn"
        android:textAlignment="viewStart"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/et_TaskName_TC"
        android:hint="Task Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_TaskStatus_TC"
        android:hint="Task Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_TaskDesc_TC"
        android:hint="Task Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_StartDate_TC"
        android:hint="Start Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_EndDate_TC"
        android:hint="End Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <Button
        android:id="@+id/btn_createTask_TC"
        android:textAllCaps="false"
        android:text="Create Task"
        android:textColor="#FCFCFC"
        android:background="@drawable/button_curved_blue"
        android:layout_gravity="center"
        android:layout_width="140dp"
        android:layout_height="40dp" />
</LinearLayout>