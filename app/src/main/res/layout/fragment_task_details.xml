<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <Button
        android:id="@+id/btn_addtaskMenber"
        android:layout_gravity="center"
        android:background="@drawable/button_curved_blue"
        android:text="Add Task Menber"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:textColor="#FCFCFC"
        android:textAllCaps="false"
        android:layout_width="140dp"
        android:layout_height="40dp" />


    <Button
        android:id="@+id/btn_updatetaskstatus"
        android:layout_gravity="center"
        android:background="@drawable/button_curved_blue"
        android:text="update task status"
        android:textSize="16sp"
        android:textColor="#FCFCFC"
        android:textAllCaps="false"
        android:layout_width="140dp"
        android:layout_height="40dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <Button
        android:id="@+id/goToSubTasksList"
        android:layout_gravity="center"
        android:background="@drawable/button_curved_blue"
        android:text="Sub Tasks List"
        android:textSize="16sp"
        android:textColor="#FCFCFC"
        android:textAllCaps="false"
        android:layout_width="140dp"
        android:layout_height="40dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <Button
        android:id="@+id/goToTasksmenber"
        android:layout_gravity="center"
        android:background="@drawable/button_curved_blue"
        android:text="Tasks Menber"
        android:textSize="16sp"
        android:textColor="#FCFCFC"
        android:textAllCaps="false"
        android:layout_width="140dp"
        android:layout_height="40dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <Button
        android:id="@+id/viewTaskPriority"
        android:layout_gravity="center"
        android:background="@drawable/button_curved_blue"
        android:text="Task Priority"
        android:textSize="16sp"
        android:textColor="#FCFCFC"
        android:textAllCaps="false"
        android:layout_width="140dp"
        android:layout_height="40dp" />

</LinearLayout>