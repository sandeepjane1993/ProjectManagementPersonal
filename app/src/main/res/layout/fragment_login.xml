<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"/>

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/logo_wrike"
        android:layout_width="140dp"
        android:layout_height="60dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText

            android:id="@+id/et_email_LI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="text"
            android:textColorHighlight="#10026b"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_password_SI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <Button
        android:id="@+id/btn_SignIn_SI"
        android:background="@drawable/button_curved_blue"
        android:textColor="#FCFCFC"
        android:text="Log in"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <TextView
        android:layout_gravity="center"
        android:text="Use company credentials"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
    android:layout_width="match_parent"
    android:layout_height="10dp"/>
    <TextView
        android:id="@+id/tv_forgotPassword"
        android:layout_gravity="center"
        android:text="Forgot Password?"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <TextView
        android:layout_gravity="center"
        android:text="Log in with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_SignIn_Google"
            android:background="@drawable/button_curved_blue"
            android:textColor="#FCFCFC"
            android:textSize="18dp"
            android:drawableLeft="@drawable/logo_google"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="40dp" />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_SignIn_office365"
            android:background="@drawable/button_curved_blue"
            android:textColor="#FCFCFC"
            android:textSize="18dp"
            android:drawableLeft="@drawable/logo_office"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="40dp" />


    </LinearLayout>

</LinearLayout>